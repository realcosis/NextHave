@using NextHave.BL.Services.Settings

@inject ISettingsService settingsService

<footer class="bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 border-t border-white/20 relative overflow-hidden">

    <div class="container mx-auto px-4 py-16 relative z-10">

        <div class="my-12 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>

        <div class="text-center space-y-4 animate-fade-in">

            <div class="flex justify-center items-center space-x-8 text-sm text-white/60 font-gaming">

                <span>© @period @hotelName Hotel</span>

                <span>•</span>

                <span>Server Privato</span>

                <span>•</span>

                <span>Non Ufficiale</span>

                <span>•</span>

                <span>Fan Project</span>

            </div>

            <p class="text-xs text-white/50 font-gaming max-w-2xl mx-auto">

                @hotelName Hotel è un server privato fan-made non ufficiale di Habbo. <br />
                Habbo e tutti i marchi correlati sono proprietà di Sulake Corporation Oy.

            </p>

            <div class="flex justify-center items-center space-x-2 text-white/40 font-gaming text-xs">

                <span>🚀 Made by</span>

                <span class="text-habbo-lime">NextHave</span>

            </div>

        </div>

    </div>

</footer>

@code {
    string? hotelName => settingsService.GetSetting("hotel_name");

    string? startYear => settingsService.GetSetting("start_year") ?? string.Empty;

    string? period => !string.IsNullOrWhiteSpace(startYear) ? $"{startYear}-{DateTime.UtcNow.Year}" : DateTime.UtcNow.Year.ToString();
}