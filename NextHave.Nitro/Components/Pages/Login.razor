@code {
    public UserLoginWrite loginModel = new();

    public UserRegistrationWrite registrationModel = new();

    [CascadingParameter]
    public string? hotelName { get; set; }

    bool login = true;

    public void SetLoginTab()
        => login = true;

    public void SetRegistrationTab()
        => login = false;

    public async Task HandleLogin()
    {
        try
        {
            using var scope = serviceScopeFactory.CreateScope();
            var usersService = scope.ServiceProvider.GetRequiredService<IUsersService>();

            var user = await usersService.Login(loginModel);

            if (user == default)
                return;

            var claims = new[]
            {
                new Claim(NextHaveAuthenticationConstants.Username, user.Username!),
                new Claim(NextHaveAuthenticationConstants.Id, user.Id.ToString())
            };

            var identity = new ClaimsIdentity(claims, "NextHave");
            var principal = new ClaimsPrincipal(identity);

            authenticationStateProvider.NotifyUserAuthentication(principal);
            var token = authenticationStateProvider.GenerateJwtToken(user);
            await jsRuntime.InvokeVoidAsync("localStorage.setItem", "sessiontoken", token);

            toastService.ShowSuccess("Benvenuto su NextHave!");
            navigation.NavigateTo("/");
        }
        catch (DolphinException ex)
        {
            RenderFragment message = builder =>
            {
                foreach (var (index, message) in ex.Messages.Index())
                {
                    builder.AddContent(index, message);
                    builder.AddMarkupContent(index, "<br />");
                }
            };
            toastService.ShowError(message);
        }
    }

    public async Task HandleRegistration()
    {
        try
        {
            using var scope = serviceScopeFactory.CreateScope();
            var usersService = scope.ServiceProvider.GetRequiredService<IUsersService>();

            var user = await usersService.Register(registrationModel, httpContextAccessor.GetUserIp());

            if (user == default)
                return;

            var claims = new[]
            {
                new Claim(NextHaveAuthenticationConstants.Username, user.Username!),
                new Claim(NextHaveAuthenticationConstants.Id, user.Id.ToString())
            };

            var identity = new ClaimsIdentity(claims, "NextHave");
            var principal = new ClaimsPrincipal(identity);

            authenticationStateProvider.NotifyUserAuthentication(principal);
            var token = authenticationStateProvider.GenerateJwtToken(user);
            await jsRuntime.InvokeVoidAsync("localStorage.setItem", "sessiontoken", token);

            toastService.ShowSuccess("Benvenuto su NextHave!");
            navigation.NavigateTo("/");
        }
        catch (DolphinException ex)
        {
            RenderFragment message = builder =>
            {
                foreach (var (index, message) in ex.Messages.Index())
                {
                    builder.AddContent(index, message);
                    builder.AddMarkupContent(index, "<br />");
                }
            };
            toastService.ShowError(message);
        }
    }
